{
  "name": "recipes",
  "version": "1.0.0",
  "description": "Track recipes and build grocery lists",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start-prod": "node release/main.js",
    "start": "spago run -m Recipes.Backend.Main --purs-args \"--stash --censor-lib --censor-codes=ShadowedName,ImplicitQualifiedImport,HidingImport,WildcardInferredType\"",
    "ps": "spago build --purs-args \"--stash --censor-lib --censor-codes=ShadowedName,ImplicitQualifiedImport,HidingImport,WildcardInferredType\"",
    "test": "spago test --purs-args \"--stash --censor-lib --censor-codes=ShadowedName,ImplicitQualifiedImport,HidingImport,WildcardInferredType\"",
    "build": "npm run ps && webpack && webpack -t node -c webpack.backend.config.js",
    "watch": "npm run ps && webpack -w",
    "clean": "rm -r output/Recipes*",
    "setup-db": "spago run -m Recipes.Backend.DB.Setup --purs-args \"--stash --censor-lib --censor-codes=ShadowedName,ImplicitQualifiedImport,HidingImport,WildcardInferredType\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntwilson/recipes.git"
  },
  "author": "ntwilson@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ntwilson/recipes/issues"
  },
  "homepage": "https://github.com/ntwilson/recipes#readme",
  "devDependencies": {
    "esbuild": "^0.15.7",
    "purescript": "^0.15.4",
    "purescript-psa": "^0.8.2",
    "spago": "^0.20.9",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@azure/cosmos": "^3.17.0",
    "@azure/identity": "^2.1.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.4",
    "decimal.js": "^10.2.1",
    "pg": "^8.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "url": "^0.11.0",
    "xhr2": "^0.2.1"
  }
}
